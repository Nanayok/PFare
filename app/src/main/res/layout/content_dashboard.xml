<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pfare.pfarepassenger.Activity.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dashboard_background"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/dashboard_top_background">




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_card_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Balance"
                android:textColor="@color/light_blue"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/textview_card_balance"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GHS"
                    android:textColor="@color/light_blue"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="240.00"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    />





            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_dashboard_background"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:text="Top Up"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="20dp"
                android:drawableRight="@drawable/ic_add_black_24dp"
                android:padding="10dp"

                />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Transport"
            android:textColor="@color/white"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="100dp"
            >

            <Button
                android:id="@+id/button_taxi"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_dashboard_background"
                android:text="Taxi"
                android:drawableTop="@drawable/ic_taxi"
                android:padding="20dp"

                />

            <Button
                android:id="@+id/button_commuter"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="25dp"
                android:background="@drawable/button_dashboard_background"
                android:text="Commuter"
                android:drawableTop="@drawable/ic_commuter"
                android:padding="10dp"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_below="@+id/linearlayout"
            >

            <!--android:layout_marginTop="10dp"-->


            <Button
                android:id="@+id/button_shuttle"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_dashboard_background"
                android:text="Shuttle"
                android:drawableTop="@drawable/ic_shuttle"
                android:padding="20dp"
                />

            <Button
                android:id="@+id/button_mikrolet"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="25dp"
                android:background="@drawable/button_dashboard_background"
                android:text="Mikrolet"
                android:drawableTop="@drawable/ic_mikrolet"
                android:padding="20dp"

                />

        </LinearLayout>






    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
